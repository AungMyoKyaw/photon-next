# .editorconfig
# Project: photon-next (Next.js + TypeScript + PostCSS)
# Top-most EditorConfig file
root = true

# ------------------------------------------------------------
# Default rules (applies to all text files)
# ------------------------------------------------------------
[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# Max line length is advisory; many editors respect it for warnings/soft-wraps
max_line_length = 120

# ------------------------------------------------------------
# Markdown & MDX (allow intentional trailing spaces for line breaks)
# ------------------------------------------------------------
[*.{md,mdx}]
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# ------------------------------------------------------------
# JavaScript / TypeScript / JSX / TSX / ESM / CJS
# ------------------------------------------------------------
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# ------------------------------------------------------------
# CSS / PostCSS / SCSS / Less
# ------------------------------------------------------------
[*.{css,pcss,scss,sass,less}]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# ------------------------------------------------------------
# HTML / XML
# ------------------------------------------------------------
[*.{html,xml}]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# ------------------------------------------------------------
# JSON (configuration files)
# ------------------------------------------------------------
[*.{json,jsonc}]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# ------------------------------------------------------------
# YAML
# ------------------------------------------------------------
[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# ------------------------------------------------------------
# Shell scripts
# ------------------------------------------------------------
[*.sh]
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# ------------------------------------------------------------
# Makefile (Makefiles require literal tabs for recipe lines)
# Provide an explicit exception so Makefiles remain correct.
# ------------------------------------------------------------
[Makefile]
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = true
end_of_line = lf
charset = utf-8

# ------------------------------------------------------------
# Binary/Generated files â€” don't attempt to trim or normalize
# (many editors ignore non-text files; these entries are defensive)
# ------------------------------------------------------------
[*.{png,jpg,jpeg,gif,webp,ico,svg,woff,woff2,ttf,otf,pdf}]
trim_trailing_whitespace = false
insert_final_newline = false
